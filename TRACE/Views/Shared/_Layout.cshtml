<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"] - TRACE</title>

    <!--Main CSS-->
    <link rel="stylesheet" href="~/css/drin.css" asp-append-version="true" />

    <!--Ol reliable google font-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <!--boxicons-->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    @* <link rel="stylesheet" href="~/TRACE.styles.css" asp-append-version="true" /> *@
</head>
<body>
    <header class="flex space-between">
        <div class="upper">
            <div class="logo-div flex h-center gap-10">
                <img src="~/images/ERC-LOGO.png" />
                <div class="trace-logo">
                    <h3>TRACE</h3>
                    <span>Tracking, Reporting, & Archiving<br /> of Cases in ERC</span>
                </div>
            </div>
            <div class="main-menu">
                <span>Menu</span>
                <ul>
                    <li onclick="location.href='@Url.Action("Dashboard", "Home")'">
                        <img src="~/images/icons/dashboard.png" />
                        <span>Dashboard</span>
                    </li>
                    <li onclick="location.href='@Url.Action("CaseManagement", "Home")'">
                        <img src="~/images/icons/case.png" />
                        <span>Case Management</span>
                    </li>
                    <li onclick="location.href='@Url.Action("DocumentManagement", "Home")'">
                        <img src="~/images/icons/document.png" />
                        <span>Document Management</span>
                    </li>
                    <li onclick="location.href='@Url.Action("Hearings", "Home")'">
                        <img src="~/images/icons/hearing.png" />
                        <span>Hearings</span>
                    </li>
                </ul>
            </div>
        </div>
        <div class="bottom">
            <div class="main-menu">
                <span>Support</span>
                <ul>
                    <li onclick="location.href='@Url.Action("FAQs", "Home")'">
                        <i class='bx bxs-help-circle'></i>
                        <span>FAQs</span>
                    </li>
                    <li onclick="location.href='@Url.Action("Settings", "Home")'">
                        <i class='bx bxs-cog'></i>
                        <span>Settings</span>
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <div class="floater flex h-center gap-10">
        <div class="notification-div">
            <i class='bx bxs-bell'></i>
        </div>
        <div class="user-div">
            <i class='bx bxs-user'></i>
        </div>
        <div class="username-div flex h-center gap-10">
            <div class="name">
                <p>Juan Dela Cruz</p>
                <p>Super Admin</p>
            </div>
            <div class="arrow-div">
                <i class='bx bxs-chevron-down'></i>
            </div>
            <div class="dropdown-menu">
                <ul>
                    <li><i class='bx bxs-log-out'></i> Logout</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/drin-theme.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
