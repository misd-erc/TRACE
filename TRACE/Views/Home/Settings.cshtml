@{
    ViewData["Title"] = "Settings";
}
<h1>@ViewData["Title"]</h1>

<div class="settings-tab">
    <div>Appearance</div>
    <div>Notification</div>
    <div>Content Management</div>
    <div>User Management</div>
</div>


<div>
    <h2>Appearance</h2>
    <p>Modify theme and display settings</p>
    <hr />
    <div class="card-div setting-bg border-radius-5">
        <h3>Theme Manager</h3>
        <div class="theme-toggle-container">
            <p>Enable dark theme:</p>
            <label class="theme-switch">
                <input type="checkbox" id="themeToggle">
                <span class="drin-slider"></span>
            </label>
        </div>

        <div class="theme-toggle-container">
            <p>Theme Color:</p>
            <div class="color-options">

                <!-- Blue -->
                <div class="color-option" data-color="#007bff" style="background-color: #007bff;"></div>
                <div class="color-option" data-color="#0056b3" style="background-color: #0056b3;"></div>
                <div class="color-option" data-color="#003f7f" style="background-color: #003f7f;"></div>
                <div class="color-option" data-color="#3399ff" style="background-color: #3399ff;"></div>
                <div class="color-option" data-color="#66ccff" style="background-color: #66ccff;"></div>

                <!-- Green -->
                <div class="color-option" data-color="#28a745" style="background-color: #28a745;"></div>
                <div class="color-option" data-color="#218838" style="background-color: #218838;"></div>
                <div class="color-option" data-color="#1e7e34" style="background-color: #1e7e34;"></div>
                <div class="color-option" data-color="#71d88b" style="background-color: #71d88b;"></div>
                <div class="color-option" data-color="#a5e6b4" style="background-color: #a5e6b4;"></div>

                <!-- Red -->
                <div class="color-option" data-color="#dc3545" style="background-color: #dc3545;"></div>
                <div class="color-option" data-color="#c82333" style="background-color: #c82333;"></div>
                <div class="color-option" data-color="#bd2130" style="background-color: #bd2130;"></div>
                <div class="color-option" data-color="#f27474" style="background-color: #f27474;"></div>
                <div class="color-option" data-color="#f8b4b4" style="background-color: #f8b4b4;"></div>

            </div>
        </div>

    </div>
</div>