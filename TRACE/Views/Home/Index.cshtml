<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>

    <h2>Users List</h2>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody id="userTable">
            <!-- Data will be inserted here -->
        </tbody>
    </table>

    <script>
    $(document).ready(function () {
        $.ajax({
            url: "/Users/GetUsers", // ✅ Ensure this endpoint returns JSON
            method: "GET",
            dataType: "json",
            success: function (data) {
                let rows = "";
                data.forEach(user => {
                    rows += `<tr>
                                <td>${user.id}</td>
                                <td>${user.name}</td>
                                <td>${user.email}</td>
                            </tr>`;
                });
                $("#userTable").html(rows); // ✅ Correct selector
            },
            error: function (xhr, status, error) {
                console.error("Error fetching data: ", xhr.responseText);
            }
        });
    });
    </script>

</body>
</html>
